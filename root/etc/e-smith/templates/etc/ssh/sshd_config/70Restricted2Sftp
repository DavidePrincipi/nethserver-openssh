{
    # restrict groups to sftp, ssh access is refused
    return "" if ($sssd{'ShellOverrideStatus'} ne 'enabled');

    my $domain = $DomainName;
    my @SftpRestricted = ();
    my @SftpUnRestricted = ();

    my $admins_group = $admins{'group'} || 'domain admins';

    foreach ( $admins_group, split(',',$sshd{'AllowGroups'} || '')) {
        my ($group, $sftp) = split(':', $_);
        if(!$group) {
            next;
        }
        if (!$sftp) {
            $sftp = '';
        }

        $group .= "\@$domain" if ($group !~ '@');
        if ($sftp eq 'sftp') {
            push @SftpRestricted, $group;
        } else {
            # do not force SFTP to groups with SSH permission
            push @SftpUnRestricted, $group;
       }
    }

   if ($sshd{'AllowEveryone'} eq 'sftp+ssh') {
        # Everyone is allowed to SSH & SFTP
        return  "";
    } 
    elsif (@SftpRestricted && ($sshd{'AllowEveryone'} eq 'none')) {
        # We list non restricted group to SFTP
        @SftpUnRestricted = join (",",@SftpUnRestricted);
        # We list restricted group to SFTP
        @SftpRestricted = join (",",@SftpRestricted);

        $OUT .= "Match Group \"root,@SftpUnRestricted\"\n";
        $OUT .= "    ForceCommand none\n";
        $OUT .= "Match Group \"@SftpRestricted\"\n";
        $OUT .= "    ForceCommand internal-sftp\n";
        $OUT .= "    AllowTCPForwarding no\n";
        $OUT .= "    X11Forwarding no\n";

    } elsif ($sshd{'AllowEveryone'} eq 'sftp') {
        # We list non restricted group to SFTP
        @SftpUnRestricted = join (",",@SftpUnRestricted);

        $OUT .= "Match Group \"root,@SftpUnRestricted\"\n";
        $OUT .= "    ForceCommand none\n";
        $OUT .= "Match All\n";
        $OUT .= "    ForceCommand internal-sftp\n";
        $OUT .= "    AllowTCPForwarding no\n";
        $OUT .= "    X11Forwarding no\n";
    }
}
